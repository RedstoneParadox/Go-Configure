{
  "schemaVersion": 1,
  "id": "goconfigure",
  "version": "${version}",

  "name": "Go Configure",
  "description": "A Kotlin-based configuration api for Minecraft mods.",
  "authors": [
    "RedstoneParadox"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/RedstoneParadox/paradox-config"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      {
        "adapter": "kotlin",
        "value": "io.github.redstoneparadox.goconfigure.ParadoxConfig"
      }
    ],
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.github.redstoneparadox.goconfigure.compat.ParadoxConfigRecipeConditions"
      }
    ],
    "libcd": [
      {
        "adapter": "kotlin",
        "value": "io.github.redstoneparadox.goconfigure.compat.ParadoxConfigConditions"
      }
    ]
  },
  "mixins": [
    "pconfig.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric-language-kotlin": ">=1.3.71"
  }
}
